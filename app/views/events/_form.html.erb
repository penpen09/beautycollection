<%= form_with(model: @event, local: true, url: choose_new_or_edit) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> 作成できません</h2>
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= image_tag(@event.image.url) if @event.image && @event.image.url %>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :event_date %>
    <%= f.datetime_select :event_date, include_blank: true, minute_step: 10 %>
  </div>
  <div class="field">
    <%= f.label :place %>
    <%= f.text_field :place, placeholder: "例：オンライン、東京都渋谷区" %>
  </div>
  <div class="field">
    <%= f.label :fee %>
    <%= f.number_field :fee, placeholder: "無料の場合は0" %>
  </div>
  <div class="field">
    <%= f.label :contact %>
    <%= f.text_field :contact, placeholder: "zoomのurlなど" %>
  </div>
  <div class="field">
    <%= f.collection_check_boxes(:label_ids, Label.all, :id, :name)  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
