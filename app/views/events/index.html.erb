
<%= render 'events_header' %>
<section class="page-section" id="about">
  <div class="container">
    <!-- 検索 -->
    <div class="row h-100 align-items-center justify-content-center">
      <div class="card">
      <div class="card-body">
        <%= search_form_for @q do |f| %>
          <div class="row">
            <div class="col-lg-12 align-self-end form-row justify-content-center">
              <div class="form-group form-inline">
                <%= f.search_field :title_cont, {placeholder: "タイトルから検索",class: "form-group form-control" } %>
                <%= f.select :labels_name_cont, options_from_collection_for_select(Label.all, :name, :name, "") ,class: 'form-control drop' %>
              </div>
            </div>
            <div class="col-lg-12 align-self-end justify-content-center">
              <div class="form-inline form-row">
                <p><%= f.date_select :event_date, {default: Time.now, use_month_numbers: true, date_separator: ' / '}, class: "form-group form-control event_time_group" %>&nbsp;〜&nbsp;
                <%= f.date_select :event_date, {default: Time.now + 1.year, use_month_numbers: true, date_separator: ' / '}, class: "form-group form-control event_time_group" %></p>
              </div>
            </div>
            <div class="col-lg-12 align-self-end justify-content-center">
              <div class="form-inline">
                <%= f.submit "検索" ,class: "btn btn-outline-secondary search-event-secondary"%>
                <%= link_to '検索条件クリア', request.path ,class: "btn btn-outline-primary search-event-primary"%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row h-100 align-items-center justify-content-center">
        <div class="col-lg-10 align-self-end">
          <% @events.each do |event| %>
            <div class="card">
              <div class="card-header">
                <%= event.event_date.strftime('%m/%d %H:%M') %>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= link_to event.title, event %></h5>
                <p class="card-text">主催者：<%= event.user.name %>&nbsp;開催場所：<%= event.place %></p>
                <p><% event.labels.each do |label| %><label class='badge badge-primary'><%= label.name %></label><% end %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
