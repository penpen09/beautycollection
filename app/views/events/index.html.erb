<% if current_user.try(:admin?) %>
  <h1>Events_Admin</h1>
<% else %>
  <h1>Events</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>event_date</th>
      <th>place</th>
      <th>fee</th>
      <th>contact</th>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.name %></td>
        <td><%= event.title %></td>
        <td><%= event.content %></td>
        <td><%= event.event_date %></td>
        <td><%= event.place %></td>
        <td><%= event.fee %></td>
        <td><%= event.contact %></td>
        <td><% event.labels.each do |label| %><%= label.name %><% end %></td>
        <td><%= link_to 'Show', event %></td>
        <% if current_user.try(:admin?) || current_user == event.user_id %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New event', new_event_path %>
