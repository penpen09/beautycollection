<div class="container">
  <div class="form-kintone">
  <h2 class="form-kintone-heading">お問い合わせ</h2>
  <%= form_for :inquiry, url: inquiries_path do |form| %>
  <div class="form-group">
    <%= form.label :client_name, "お名前:" %><br>
    <%= form.text_field :client_name ,class: "form-control form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :contact_type, "問い合わせ種別:" %><br>
    <table style="border: 1px solid black;">
      <tr>
        <td>
    <%= form.radio_button :contact_type, "サイトについて"%>
    <%= form.label :product, "サイトについて" %>
    <%= form.radio_button :contact_type, "お客様対応について"%>
    <%= form.label :claim, "お客様対応について" %>
    <%= form.radio_button :contact_type, "その他"%>
    <%= form.label :misc, "その他" %>
        </td>
      </tr>
    </table>
  </div>
  <div class="form-group">
    <%= form.label :details, "詳細:" %><br>
    <%= form.text_area :details, size: "50x6" ,class: "form-control form-control"%>
  </div>
  <div class="actions">
    <%= form.submit "送信",class: 'btn btn-primary' %>
  </div>
<% end %>
  </div>
</div>
