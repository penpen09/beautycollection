<%= render 'user_header' %>
  <section class="page-section" id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <img border="0" src="/assets/myprofile.png" width="210" height="50">
          <div class="list-group">
            <a><%= link_to 'Profile', user_path(@user), class: "list-group-item myprofile-list" %></a>
            <a><%= link_to 'following', following_user_path(@user), class: "list-group-item myprofile-list" %></a>
            <a><%= link_to 'followers', followers_user_path(@user), class: "list-group-item myprofile-list" %></a>
            <a><%= link_to '参加中イベント', eventrooms_user_path(@user), class: "list-group-item myprofile-list" %></a>
            <a><%= link_to '主催イベント', event_index_user_path(@user), class: "list-group-item myprofile-list" %></a>
            <a><%= link_to '投稿記事', post_index_user_path(@user), class: "list-group-item myprofile-list" %></a>
            <a><%= link_to 'お気に入り記事', favorites_user_path(@user), class: "list-group-item myprofile-list" %></a>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="container profile-page">
            <div class="postTitle">
              <h3 style="color:#808080;">お気に入り一覧</h3>
            </div>
            <div class="container-fluid">
              <div class="row h-100 align-items-center justify-content-center">
                <div class="col-lg-10 align-self-end">
                  <% @favorites.each do |favorite| %>
                    <div class="card">
                      <div class="card-header">
                        <%= favorite.post.title %>
                      </div>
                      <div class="card-body">
                        <%= image_tag favorite.post.image.url, size: "200x150",class: "float-left" %>
                        <h5 class="card-title"><p><%= link_to favorite.post.user.name, favorite.post.user %><%= image_tag favorite.post.user.icon.url, size: "40x40" %></p></h5>
                        <p class="card-text"><%= link_to favorite.post.content, favorite.post %></p>
                        <p><% favorite.post.labels.each do |label| %><label class='badge badge-primary'><%= label.name %></label><% end %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <%= paginate @favorites ,class:"pagination" %>
          </div>
        </div>
      </div>
    </div>
  </section>
