<%= render 'events_header' %>
<section class="page-section" id="about">
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <img border="0" src="../assets/myprofile.png" width="210" height="50">
      <div class="list-group">
        <a><%= link_to 'Profile', user_path(@user), class: "list-group-item myprofile-list" %></a>
        <a><%= link_to 'following', following_user_path(@user), class: "list-group-item myprofile-list" %></a>
        <a><%= link_to 'followers', followers_user_path(@user), class: "list-group-item myprofile-list" %></a>
        <a><%= link_to '参加中イベント', eventrooms_user_path(@user), class: "list-group-item myprofile-list" %></a>
        <a><%= link_to '主催イベント', event_index_user_path(@user), class: "list-group-item myprofile-list" %></a>
        <a href="#" class="list-group-item myprofile-list">投稿記事</a>
        <a href="#" class="list-group-item myprofile-list">お気に入り記事</a>
      </div>
    </div>
    <div class="col-lg-9">
      <div class="container profile-page">
        <div>
        <p><%= image_tag @user.icon.url, size: "200x150" %></p>
        <p>名前 : <%= @user.name %></p>
        <p>メールアドレス : <%= @user.email %></p>
        </div>
        <p>プロフィール : <%= @user.profile %></p>
        <p>愛用のメイク道具 : <%= @user.make_tool %></p>
        <p>youtubeチャンネル : <%= link_to @user.youtube_channel ,@user.youtube_channel%></p>
        <%= render 'stats' %>
        <%= render 'follow_form', user:@user %>
        <br>
        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'passwordとmailの変更', edit_user_registration_path(@user) %>
      </div>
    </div>
  </div>
</div>
</div>
