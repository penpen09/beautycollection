<%= render 'user_header' %>
  <section class="page-section" id="about">
    <div class="container">
      <% @user.following.each do |user| %>
        <table>
        <tr>
          <td>  <%= user.name %> </td>
          <td><%= link_to '詳細', user_path(user) %></td>
          <td><%= render 'follow_form', user: user %></td>
        </tr>
        </table>
      <% end %>
    </div>
  </div>
